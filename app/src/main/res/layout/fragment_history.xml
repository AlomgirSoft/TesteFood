<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.HistoryFragment">


    <TextView
        android:id="@+id/TvrecentBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Recent Buy"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvrecentBuy">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recentByOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/recentBuyFoodImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bannar3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="false"
                app:riv_oval="false"
                app:riv_tile_mode="repeat" />

            <TextView
                android:id="@+id/recentBuyFoodNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/akaya_telivigala"
                android:text="Herbal Pancake"
                android:textColor="@color/black"
                android:textSize="16sp"

                app:layout_constraintStart_toEndOf="@+id/recentBuyFoodImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/TvWaroenk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waroenk kita"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/recentBuyFoodNameTV"
                app:layout_constraintTop_toBottomOf="@+id/recentBuyFoodNameTV" />

            <TextView
                android:id="@+id/recentPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$7"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/TvWaroenk"
                app:layout_constraintStart_toStartOf="@+id/TvWaroenk"
                app:layout_constraintTop_toBottomOf="@+id/TvWaroenk" />

            <androidx.cardview.widget.CardView
                android:id="@+id/orderStatus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                app:cardBackgroundColor="@color/gray_bler"
                app:cardCornerRadius="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/receivedBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/add_to_cart"
                android:padding="6dp"
                android:text="Received"
                android:visibility="invisible"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/orderStatus"
                app:layout_constraintStart_toStartOf="@+id/orderStatus"
                app:layout_constraintTop_toBottomOf="@+id/orderStatus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TvPreviouslyBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Previously buy"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvPreviouslyBuy"
        tools:listitem="@layout/item_history" />
</androidx.constraintlayout.widget.ConstraintLayout>