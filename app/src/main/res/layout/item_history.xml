<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rechenByOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/historyFoodImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bannar3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="false"
                app:riv_oval="false"
                app:riv_tile_mode="repeat" />

            <TextView
                android:id="@+id/recentBuyFoodNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/akaya_telivigala"
                android:text="Herbal Pancake"
                android:textColor="@color/black"
                android:textSize="16sp"

                app:layout_constraintStart_toEndOf="@+id/historyFoodImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/TvWaroenk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waroenk kita"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/recentBuyFoodNameTV"
                app:layout_constraintTop_toBottomOf="@+id/recentBuyFoodNameTV" />

            <TextView
                android:id="@+id/recentPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$7"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/TvWaroenk"
                app:layout_constraintStart_toStartOf="@+id/TvWaroenk"
                app:layout_constraintTop_toBottomOf="@+id/TvWaroenk" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/addToCartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/add_to_cart"
                android:fontFamily="@font/lato"
                android:padding="6dp"
                android:text="Buy Again"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/historyFoodImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.cardview.widget.CardView>